@model Exam
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="form-group mb-2">
                        <label asp-for="Year"></label>
                        <input asp-for="Year" class="form-control" />
                        <span class="text-danger" asp-validation-for="Year"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Month"></label>
                        <input asp-for="Month" class="form-control" />
                        <span class="text-danger" asp-validation-for="Month"></span>
                    </div>
                    <div class="form-group mb-2">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <a class="btn btn-light" asp-area="Admin" asp-action="Index" asp-controller="Exam">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}
