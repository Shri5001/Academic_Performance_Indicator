@model SubjectBranchVM
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="@Model.Subject.Id" />
                    <div class="form-group mb-2">
                        <label asp-for="@Model.Subject.Code"></label>
                        <input asp-for="@Model.Subject.Code" class="form-control" />
                        <span class="text-danger" asp-validation-for="@Model.Subject.Code"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="@Model.Subject.Name"></label>
                        <input asp-for="@Model.Subject.Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="@Model.Subject.Name"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="@Model.Subject.BranchId"></label>
                        <select asp-for="@Model.Subject.BranchId" asp-items="@Model.Branches" class="form-control">
                            <option disabled selected>Select Branch</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Subject.BranchId"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="@Model.Subject.isTheory"></label>
                        <select asp-for="@Model.Subject.isTheory" class="form-control">
                            <option disabled selected>Select</option>
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Subject.isTheory"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="@Model.Subject.isTPractical"></label>
                        <select asp-for="@Model.Subject.isTPractical" class="form-control">
                            <option disabled selected>Select</option>
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Subject.isTPractical"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="@Model.Subject.isAudit"></label>
                        <select asp-for="@Model.Subject.isAudit" class="form-control">
                            <option disabled selected>Select</option>
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Subject.isAudit"></span>
                    </div>
                    <div class="form-group mb-2">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <a class="btn btn-light" asp-area="Admin" asp-action="Index" asp-controller="Subject">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}
