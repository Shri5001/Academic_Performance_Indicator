@model TeacherSubjectVM
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="All"></div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <input asp-for="@Model.Teacher.UserId" value="@Model.User.Id" type="hidden" />
                    <div class="form-group mb-2">
                        <label asp-for="@Model.Teacher.SubjectId"></label>
                        <select asp-for="@Model.Teacher.SubjectId" asp-items="@Model.Subjects" class="form-control">
                            <option disabled selected>Select Subject</option>
                        </select>
                        <span class="text-danger" asp-validation-for="@Model.Teacher.SubjectId"></span>
                    </div>
                    <div class="form-group mb-2">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <a class="btn btn-light" asp-area="Admin" asp-action="Index" asp-controller="User">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}
