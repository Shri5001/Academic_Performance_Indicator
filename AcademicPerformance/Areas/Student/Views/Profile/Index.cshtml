@model Student
<h1>@ViewData["Title"]</h1>
<div class="row mt-3">
    <div class="col-md-12">
        <partial name="_Messages" />
    </div>
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-body">
                <h3>@ViewData["userName"]</h3>
                <h6 class="text-muted mb-3">@ViewData["userEmail"]</h6>

                <div class="mt-3 text-muted">
                    <img src="~/storage/student/images/@Model.ImageUrl" height="100" width="80" />
                    <table class="table table-borderless">
                        <tr>
                            <td class="fw-bold">PRN</td>
                            <td>@Model.PRN</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Branch</td>
                            <td>@Model.Branch.Name</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Class Section</td>
                            <td>@Model.ClassSection</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Year</td>
                            <td>@Model.ClassYear</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Semester</td>
                            <td>@Model.Sem</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Aadhaar</td>
                            <td>@Model.Aadhaar</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Mobile Number</td>
                            <td>@Model.Mobile</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <a asp-action="UpdateProfile" asp-area="Student" asp-controller="Profile" class="btn btn-primary">Update Your Profile</a>
    </div>

    <div class="col-md-6 offset-md-1">
        <h4>Personal Info</h4>
        <table class="table table-borderless">
            <tr>
                <td class="fw-bold">Roll No</td>
                <td>@Model.RollNo</td>
            </tr>
            <tr>
                <td class="fw-bold">Gender</td>
                <td>@Model.Gender</td>
            </tr>
            <tr>
                <td class="fw-bold">Date of Birth</td>
                <td>@Model.DOB?.ToString("dd-MM-yyyy")</td>
            </tr>
            <tr>
                <td class="fw-bold">Blood Group</td>
                <td>@Model.BloodGroup</td>
            </tr>
            <tr>
                <td class="fw-bold">Nationality</td>
                <td>@Model.Nationality</td>
            </tr>
            <tr>
                <td class="fw-bold">Religion</td>
                <td>@Model.Religion</td>
            </tr>
            <tr>
                <td class="fw-bold">Caste</td>
                <td>@Model.Caste</td>
            </tr>
            <tr>
                <td class="fw-bold">Caste Category</td>
                <td>@Model.CasteCategory</td>
            </tr>
            <tr>
                <td class="fw-bold">Address</td>
                <td>@Model.Address</td>
            </tr>
        </table>
    </div>

    <div class="col-md-6 mt-5">
        <h4>About</h4>
        <div>@Html.Raw(@Model.About)</div>
    </div>
    <div class="col-md-6 mt-5">
        <h4>Internships</h4>
        <div>@Html.Raw(@Model.Interships)</div>
    </div>
    <div class="col-md-6 mt-5">
        <h4>Hands-On Experience</h4>
        <div>@Html.Raw(@Model.HandsOn)</div>
    </div>
    <div class="col-md-6 mt-5">
        <h4>Other Activities</h4>
        <div>@Html.Raw(@Model.OtherActivities)</div>
    </div>
</div>
