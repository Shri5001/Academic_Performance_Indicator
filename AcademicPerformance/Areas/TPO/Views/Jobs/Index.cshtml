@model List<Jobs>
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <partial name="_Messages" />
    </div>
    <div class="col-md-12 mb-2">
        <a class="btn btn-primary" asp-area="TPO" asp-action="Create" asp-controller="Jobs">Create new job</a>
    </div>
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Department</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model.OrderByDescending(u => u.Id))
                    {
                        <tr>
                            <td>@i.Title</td>
                            <td>@i.Branch.Name</td>
                            <td>
                                <a class="text-info" asp-area="TPO" asp-action="Edit" asp-controller="Jobs" asp-route-id="@i.Id">Edit</a>
                                <a class="text-success" asp-area="TPO" asp-action="Applications" asp-controller="Jobs" asp-route-id="@i.Id">Applications</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
